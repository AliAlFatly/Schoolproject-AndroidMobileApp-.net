                <!--<Label Text="Max squat in kg" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2">
                </Label>
                <Entry Text="{Binding cSQT}" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="3" />

